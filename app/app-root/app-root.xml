-->
<nsDrawer:RadSideDrawer id="sideDrawer" 
  xmlns:nsDrawer="nativescript-ui-sidedrawer" loaded="onLoaded">
  <nsDrawer:RadSideDrawer.drawerTransition>
    <nsDrawer:SlideInOnTopTransition/>
  </nsDrawer:RadSideDrawer.drawerTransition>

  <nsDrawer:RadSideDrawer.drawerContent>
    <GridLayout rows="auto, *" class="sidedrawer sidedrawer-left">

      <ScrollView row="1" col="4" class="sidedrawer-content">
        <StackLayout>

          <GridLayout columns="auto, *" class="{{ 'sidedrawer-list-item' + (selectedPage === 'findUHF' ? ' selected': '') }}" route="findUHF/findUHF-page" title="findUHF" tap="onNavigationItemTap">
            <Label row="0" col="0" text="&#xf015;" class="fa" />
            <Label row="0" col="1" text="Поиск местонахождения метки" textWrap="true" class="p-r-10" />
          </GridLayout>

          <GridLayout columns="auto, *" class="{{ 'sidedrawer-list-item' + (selectedPage === 'instruction' ? ' selected': '') }}" route="instruction/instruction-page" title="instruction" tap="onNavigationItemTap">
            <Label row="0" col="0" text="&#xf1ea;" class="fa" />
            <Label row="0" col="1" text="Инструкция" class="p-r-10" />
          </GridLayout>

        </StackLayout>

      </ScrollView>

    </GridLayout>
  </nsDrawer:RadSideDrawer.drawerContent>

  <nsDrawer:RadSideDrawer.mainContent>
    <Frame defaultPage="findUHF/findUHF-page"></Frame>
  </nsDrawer:RadSideDrawer.mainContent>
</nsDrawer:RadSideDrawer>
