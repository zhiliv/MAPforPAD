<Page class="page" navigatingTo="onNavigatingTo" 
  xmlns="http://schemas.nativescript.org/tns.xsd">

  <ActionBar class="action-bar">
    <NavigationButton icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
    <ActionItem icon="res://navigation/menu" android:visibility="collapsed" tap="onDrawerButtonTap">
    </ActionItem>
    <Label class="action-bar-title" text="Инструкция"></Label>
  </ActionBar>

  <GridLayout class="page-content">
      <Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
        <!-- Отображение WebView -->
        <WebView id="webView" row="3" col="0" colSpan="2" loadStarted="onLoadStarted" loadFinished="onLoadFinished" />
      </Page>

  </GridLayout>

  
</Page>
